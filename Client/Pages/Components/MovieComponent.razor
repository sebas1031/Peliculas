<EditForm Model="Movie" OnValidSubmit="OnValidSubmit">   
    <DataAnnotationsValidator></DataAnnotationsValidator> 
    <div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
        <a>
            <img src="@Movie.image[0]" alt="" width="225px" height="300px" />
        </a>
        <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;">
            <a href="@urlMovie">@Movie.name</a>
        </p>
        <div>
            <a class="btn btn-info">Editar</a>
            <button type="button" class="btn btn-danger" @onclick="@(()=>DeleteMovie.InvokeAsync(Movie))">
                Eliminar
            </button>
        </div>
    </div>
</EditForm>
@code {
    [Parameter] public Movie Movie { get; set; }
    [Parameter] public EventCallback<Movie> DeleteMovie { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
    private string urlMovie = string.Empty;
    protected override void OnInitialized()
    {
        urlMovie = $"movie/";
    }
}