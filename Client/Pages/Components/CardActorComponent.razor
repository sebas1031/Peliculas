@using MoviesProy.Client.Shared
<div class="jumbotron">

    <h4>Actores</h4>

    <div class="container-fluid">
        <div class="row mb-3">
            @foreach (var actor in Actors)
            {
                <div class="col-md-4">
                    <div class="flex-md-row mb-3 box-shadow h-md-300">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="card">
                                <img src="@actor.Photo" class="card-img-top" alt="..." height="350px" width="150px">
                                <div class="card-body">
                                    <h5 class="card-title">Nombre: @actor.actorName</h5>
                                    <p class="card-text"><b>Genero:</b> @actor.gender</p>
                                    <p class="card-text"><b>NÂ° de nominaciones:</b> @actor.nominations</p>
                                    <p class="card-text"><b>Biografia:</b> @actor.biography</p>
                                </div>
                                <div class="card-footer">
                                    <small class="text-muted">Fecha de nacimiento: @actor.birthDate</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@code {
    [Parameter] public List<Actor> Actors {get;set;} 
}